<html>
    <head>

        <title>formulario</title>
        <meta charset="utf-8">
        <meta name="viewport" content="viewport-fit=cover, width=device-width, 
        initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <link rel="stylesheet" href="/estatico/css/form.css">

    </head>
    <body>

        <header>
            <h3>Formulário de registro</h3>
        </header>

        <form action="/lista" method="post">

            <div if(data.registro.id)>
                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" id="id" name="id" value="${data.registro.id}" />
            </div>

        <table id="formulario" align="center">

            <div>
                <tr>
                    <td><label for="telefone">Telefone:</label></td>
                    <td><input type="text" id="telefone" name="telefone" value="${data.registro.telefone}" placeholder="Telefone" /></td>
                </tr>
            </div>

            <div>
                <tr>
                    <td><label for="status">Status da ligação:</label></td>
                    <td><select id="status" name="status" value="${data.registro.status}" placeholder="Selecione">
                        <option value="recusada"> Recusada </option>
                        <option value="aceita"> Aceita </option>
                        <option value="inexistente"> Número Inexistente </option>
                        <option value="perdida"> Perdida </option>
                    </select></td>
                </tr>    
            </div>

            <div>
                <tr>
                    <td><label for="nome">Nome do morador:</label></td>
                    <td><input type="text" id="nome" name="nome" value="${data.registro.nome}" placeholder="Nome" /></td>
                </tr>
            </div>

            <div>
                <tr>
                    <td><label for="assunto">Assunto:</label></td>
                    <td><input type="text" id="assunto" name="assunto" value="${data.registro.assunto}" placeholder="Assunto" /></td>
                </tr>
            </div>
        
        </table>

        <div id="center" align="center">
            <div class="divTextarea">

                <label for="textos_b">Textos Bíblicos Usados:</label>
                <br><br>
                <textarea cols="20" rows="10"  id="textos_b" name="textos_b">${data.registro.textos_b}</textarea>

            </div>

            <div class="divTextarea">

                <label for="perguntas">Perguntas:</label>
                <br><br>
                <textarea cols="20" rows="10"  id="perguntas" name="perguntas">${data.registro.perguntas}</textarea>

            </div>

            <div class="divTextarea">

                <label for="assunto_r">Assunto da Revisita:</label>
                <br><br>
                <textarea cols="20" rows="10"  id="assunto_r" name="assunto_r">${data.registro.assunto_r}</textarea>

            </div>

            <div class="divTextarea">

                <label for="observacoes">Observações:</label>
                <br><br>
                <textarea cols="20" rows="10"  id="observacoes" name="observacoes">${data.registro.observacoes}</textarea>

            </div>

            <input id="formSubmit" type="submit" value="Salvar" />
        </div>

        </form>
    </body>
</html>